{
  "name": "resourcepack_combiner",
  "version": "0.2.0",
  "description": "resourcepack combiner made by electron",
  "main": "src/app.js",
  "build": {
    "appId": "com.boomber.resourcepack_combiner",
    "productName": "Resourcepack Combiner",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "publisherName": "Boomber"
    }
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "package-linux": "electron-packager . resourcepack_combiner --overwrite --platform=linux --asar --arch=x64 --prune=true --out=release",
    "package-mac": "electron-packager . resourcepack_combiner --overwrite --platform=darwin --asar --arch=x64 --prune=true --out=release",
    "package-win": "electron-packager . resourcepack_combiner --overwrite --platform=win32 --asar --arch=x64 --prune=true --out=release",
    "package-win32": "electron-packager . resourcepack_combiner --overwrite --platform=win32 --asar --arch=ia32 --prune=true --out=release",
    "package-all": "electron-packager . resourcepack_combiner --overwrite --all --asar --prune=true --out=release"
  },
  "author": "Boomber",
  "license": "GPL-3.0",
  "dependencies": {
    "archiver": "^3.0.0",
    "del": "^4.1.0",
    "md5": "^2.2.1",
    "mkdirp": "^0.5.1",
    "unzipper": "^0.9.11"
  },
  "devDependencies": {
    "electron": "^5.0.0",
    "electron-builder": "^20.39.0",
    "electron-packager": "^13.1.1"
  }
}
